<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>

        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/background_color</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Movies</item>
    </style>


    <style name="SimiBold">
        <item name="fontFamily">@font/ubuntu_mono_bold</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="SimiBold.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="SimiBold.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="SimiBold.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ViewAllReviews" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/ubuntu_mono_bold</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>


    <style name="Regular">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/shade_primary_color</item>
    </style>

    <style name="Regular.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Regular.Small.Secondary">
        <item name="android:textColor">@color/shade_secondary_color</item>
    </style>

    <style name="Regular.Small.ternary">
        <item name="android:textColor">@color/shade_ternary_color</item>
    </style>


    <style name="Regular.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Regular.Medium.Secondary">
        <item name="android:textColor">@color/shade_secondary_color</item>
    </style>

    <style name="CardCorners">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="CardCorners.Small">
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="CardCorners.Medium">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Colors.Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selector_chip_background</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/spacing_small</item>
    </style>

    <style name="Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>