<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.elhady.movies.ui.home.adapters.CategoryInteractionListener" />


        <variable
            name="item"
            type="com.elhady.movies.data.remote.test.Category" />
    </data>

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:background="@color/brand_color"
        android:onClick="@{() -> listener.onClickCategory(item.categoryName)}"
        android:textColor="@color/black"
        android:text="@{item.categoryName}"
        tools:text="category name"/>
</layout>
