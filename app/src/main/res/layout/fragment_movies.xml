<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.elhady.movies.ui.movies.MoviesViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movieDetails.MovieDetailsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_all_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/spacing_small"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingVertical="@dimen/spacing_small"
            android:scrollbars="none"
            hideIfTrue="@{viewModel.uiState.loading}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="3"
            tools:listitem="@layout/item_all_media" />

        <include
            isVisible="@{viewModel.uiState.loading}"
            layout="@layout/loading" />

        <include
            isVisible="@{!viewModel.uiState.error.isEmpty}"
            layout="@layout/error" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>