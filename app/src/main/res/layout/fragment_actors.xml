<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.elhady.movies.ui.actors.ActorsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.actors.ActorsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_actors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:hideIfTrue="@{viewModel.actorsUiState.loading}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="3"
            tools:listitem="@layout/item_all_actor"/>


        <include
            layout="@layout/loading"
            isVisible="@{viewModel.actorsUiState.loading}"/>

<!--        <include-->
<!--            layout="@layout/error"-->
<!--            app:viewModel="@{viewModel}"-->
<!--            isVisible="@{!viewModel.actorsUiState.error.isEmpty()}" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>