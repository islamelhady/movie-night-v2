<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.elhady.movies.ui.movieDetails.MovieDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movieDetails.MovieDetailsFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isVisible="@{!viewModel.state.loading}"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout_details"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:nestedScrollingEnabled="false"
                app:contentScrim="@color/background_color"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/movieImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:movieImage="@{viewModel.state.movieDetailsResult.image}"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <View
                        android:id="@+id/ImageBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:elevation="2dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_gravity="start|center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/backButton"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/back_button_shape"
                                android:onClick="@{()->viewModel.onClickBackButton()}"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_arrow_left"
                                app:tint="@color/background_color" />

                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/text_view_tool_bar_name"
                                style="@style/SimiBold.Large"
                                android:layout_width="0dp"
                                android:paddingEnd="@dimen/spacing_small"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{viewModel.state.movieDetailsResult.name}"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/backButton"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="movie name" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/saveButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/back_button_shape"
                            android:backgroundTint="@color/black"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_favorite"
                            app:tint="@color/background_color" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            hideIfTrue="@{viewModel.state.loading}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />

        <include
            android:id="@+id/loading"
            layout="@layout/loading"
            isVisible="@{viewModel.state.loading}" />

        <include
            android:id="@+id/error"
            layout="@layout/error"
            isVisible="@{!viewModel.state.loading}"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>